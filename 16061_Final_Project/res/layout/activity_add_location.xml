<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="4dp"
    android:fitsSystemWindows="true"
    app:cardBackgroundColor="#e9f0f3">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addItems"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_round5"
            app:titleTextColor="@color/black" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Location Name"
            android:paddingTop="24dp"
            android:textSize="17dp"
            android:paddingLeft="5dp"/>

        <AutoCompleteTextView
            android:id="@+id/locationName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Add Location"
            android:background="@drawable/outline"
            android:paddingLeft="8dp"/>


        <Button
            android:id="@+id/btnAddLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#575557"
            android:text="Add Location"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Lab People"
            android:paddingTop="24dp"
            android:textSize="17dp"
            android:paddingLeft="5dp"/>

        <AutoCompleteTextView
            android:id="@+id/peopleName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Add People"
            android:background="@drawable/outline"
            android:paddingLeft="8dp"/>

        <Button
            android:id="@+id/btnAddPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add People"
            android:backgroundTint="#575557"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Assign Items"
            android:paddingTop="24dp"
            android:textSize="17dp"
            android:paddingLeft="5dp"/>

        <AutoCompleteTextView
            android:id="@+id/locationItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Add Items"
            android:background="@drawable/outline"
            android:paddingLeft="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Quantity"
            android:paddingTop="24dp"
            android:textSize="17dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/itemQuan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Add Quantity"
            android:background="@drawable/outline"
            android:paddingLeft="8dp"/>

        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:backgroundTint="#575557"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>