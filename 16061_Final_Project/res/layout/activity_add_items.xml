<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="4dp"
    android:fitsSystemWindows="true"
    app:cardBackgroundColor="#e9f0f3">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addItems"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Dashboard"
            app:titleTextColor="@color/black"
            android:background="@drawable/toolbar_round" />
        <ProgressBar
            android:id="@+id/uploadProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add Items"
            android:paddingTop="22dp"
            android:textSize="17dp"
            android:paddingLeft="5dp" />

        <AutoCompleteTextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Item Name"
            android:background="@drawable/outline"
            android:paddingLeft="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Brand"
            android:paddingTop="22dp"
            android:textSize="17dp"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/itemBrand"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Brand Name"
            android:background="@drawable/outline"
            android:paddingLeft="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Quantity"
            android:paddingTop="22dp"
            android:textSize="17dp"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/itemQuantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Type Quantity"
            android:background="@drawable/outline"
            android:paddingLeft="8dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="5dp"
            android:paddingTop="22dp"
            android:text="Item Image"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="@drawable/outline"
                android:contentDescription="Item Image"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/black"
                    android:text="Select Image"
                    android:layout_marginLeft="6dp"/>

                <Button
                    android:id="@+id/btnRemoveImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove Image"
                    android:backgroundTint="@color/black"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Other views here -->

            <Button
                android:id="@+id/btnAddItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:backgroundTint="#8afd6e"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>